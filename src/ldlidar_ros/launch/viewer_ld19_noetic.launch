<launch>
  <arg name="port" default="/dev/ttyUSB0"/>
  <include file="$(find ldlidar_ros)/launch/ld19.launch">
    <arg name="port_name" value="$(arg port)"/>
  </include>
  <node name="rviz_show_ldlidar" pkg="rviz" type="rviz" args="-d $(find ldlidar_ros)/rviz/ldlidar_noetic.rviz" required="true"/>
</launch>