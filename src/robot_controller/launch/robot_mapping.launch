<launch>
    <!-- Parameter for use_sim_time -->
    <arg name="robot_namespace" default="/robot_0"/>
    <param name="use_sim_time" value="false"/>
    <arg name="laser_scan_topic_name" default="$(arg robot_namespace)/scan"/>
    <!-- <include file="$(find robot_controller)/launch/robot_bringup.launch" /> -->

    <!-- Load robot description (URDF file) -->
    <param name="robot_description" command="cat $(find robot_description)/urdf/robot_description.urdf" />

    <!-- Robot State Publisher - publishes TF from URDF -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
        <param name="publish_frequency" value="50.0"/>
    </node>

    <!-- TF: /robot_0/odom → dummy_base_link -->
    <!-- OPTION 1: Static TF (simple, no sensor fusion) - ĐANG DÙNG -->
    <node pkg="tf" type="static_transform_publisher" name="odom_to_dummy_base"
          args="0 0 0 0 0 0 /robot_0/odom dummy_base_link 50"/>

    <!-- OPTION 2: UKF TF (sensor fusion, nhưng có thể gây jump) - TẮT -->
    <!-- UKF sẽ publish TF này từ jetson_bringup.launch nếu publish_tf=true -->

    <!-- Launch teleop_twist_keyboard for controlling the robot -->
    <node pkg="teleop_twist_keyboard" type="teleop_twist_keyboard.py" name="teleop_twist_keyboard" output="screen">
        <remap from="cmd_vel" to="$(arg robot_namespace)/cmd_vel"/>
    </node>
    <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="laser_to_base" args="0.0 0 0.0 0 0 0 /robot_0/odom /base_link "/> -->

    <!-- Start gmapping for SLAM -->
    <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
        <!-- Frame parameters -->
        <param name="base_frame" value="base_link" />
        <param name="odom_frame" value="$(arg robot_namespace)/odom"/>
        <param name="map_frame" value="map" />

        <!-- Remap scan topic -->
        <remap from="scan" to="$(arg laser_scan_topic_name)"/>

        <!-- Motion Model Parameters - GIẢM để tin odometry hơn khi di chuyển -->
        <param name="srr" value="0.1"/>  <!-- Rotation noise from rotation -->
        <param name="srt" value="0.15"/>  <!-- Rotation noise from translation -->
        <param name="str" value="0.1"/>  <!-- Translation noise from rotation -->
        <param name="stt" value="0.1"/>  <!-- Translation noise from translation -->

        <!-- Update thresholds - Giảm để update thường xuyên hơn -->
        <param name="linearUpdate" value="0.1"/>  <!-- GIẢM từ 0.2 -->
        <param name="angularUpdate" value="0.1"/>  <!-- GIẢM từ 0.2 -->
        <param name="temporalUpdate" value="2.0"/>  <!-- Tăng để không update quá nhanh -->

        <!-- Map resolution -->
        <param name="delta" value="0.05"/>

        <!-- Map size -->
        <param name="xmin" value="-15.0"/>
        <param name="ymin" value="-15.0"/>
        <param name="xmax" value="15.0"/>
        <param name="ymax" value="15.0"/>

        <!-- Particle filter parameters -->
        <param name="particles" value="100"/>  <!-- TĂNG thêm để tracking tốt hơn -->
        <param name="resampleThreshold" value="0.5"/>

        <!-- Laser parameters -->
        <param name="maxUrange" value="5.5"/>  <!-- Max usable range -->
        <param name="maxRange" value="6.0"/>   <!-- Max sensor range -->

        <!-- Scan matching parameters - QUAN TRỌNG cho loop closure -->
        <param name="minimumScore" value="50"/>  <!-- Tăng lại để tránh false positive -->
        <param name="lstep" value="0.05"/>
        <param name="astep" value="0.05"/>
        <param name="iterations" value="5"/>  <!-- Giảm xuống để faster -->
        <param name="lsigma" value="0.075"/>
        <param name="ogain" value="3.0"/>
        <param name="lskip" value="0"/>

        <!-- Likelihood sampling parameters -->
        <param name="llsamplerange" value="0.01"/>
        <param name="llsamplestep" value="0.01"/>
        <param name="lasamplerange" value="0.005"/>
        <param name="lasamplestep" value="0.005"/>
    </node>
    <!-- RViz for visualization -->
    <!-- <node pkg="rviz" type="rviz" name="rviz" output="screen" args="-d $(find your_package_name)/rviz/mapping_config.rviz" /> -->

</launch>
